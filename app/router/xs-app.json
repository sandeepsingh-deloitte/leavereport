{
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/odata/v4/LeaveRequestReport/(.*)$",
      "target": "/odata/v4/LeaveRequestReport/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "csrfProtection": true
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "csrfProtection": true,
      "authenticationType": "xsuaa"
    }
  ]
}